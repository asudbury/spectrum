@using Spectrum.Content.Correspondence.Controllers
@model Spectrum.Content.Correspondence.ViewModels.ContactUsViewModel
@{
    Html.EnableClientValidation(true);
    Html.EnableUnobtrusiveJavaScript(true);
}


@using (Html.BeginUmbracoForm<ContactUsController>("InsertContactUs"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="center-content">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">

                    <h2 class="partial-title">Contact us today</h2>

                    <div class="form-group">
                        <label class="control-label">Name *</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label class="control-label">Email Address *</label>
                        @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label class="control-label">Message</label>
                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control", rows = "6" })
                    </div>

                    @Html.Partial("Spectrum/Required")

                    <button value="submit" id="submit" class="btn btn-lg btn-primary btn-block">Send message</button>

                </div>
            </div>
        </div>
    </div>
}